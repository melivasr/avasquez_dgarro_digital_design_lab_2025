`timescale 1ns/1ps

module tb_multiplicacion;

  logic [3:0] A;
  logic [3:0] B;
  logic [3:0] P;
  logic N, Z, C, V;

  // Instancia del DUT (Device Under Test)
  Multiplicacion dut (
    .A(A),
    .B(B),
    .P(P),
    .N(N),
    .Z(Z),
    .C(C),
    .V(V)
  );

  initial begin
    $display("   A   B |   P   | N Z C V");
    $display("---------------------------");

    // Prueba 1: 3 x 2 = 6
    A = 4'd3; B = 4'd2; #5;
    $display("%4d %4d | %4d | %b %b %b %b", A, B, P, N, Z, C, V);

    // Prueba 2: 7 x 3 = 21 (solo 4 bits => 5)
    A = 4'd7; B = 4'd3; #5;
    $display("%4d %4d | %4d | %b %b %b %b", A, B, P, N, Z, C, V);

    // Prueba 3: 8 x 4 = 32 (solo 4 bits => 0)
    A = 4'd8; B = 4'd4; #5;
    $display("%4d %4d | %4d | %b %b %b %b", A, B, P, N, Z, C, V);

    // Prueba 4: 15 x 15 = 225 (solo 4 bits => 1)
    A = 4'd15; B = 4'd15; #5;
    $display("%4d %4d | %4d | %b %b %b %b", A, B, P, N, Z, C, V);

    // Prueba 5: 0 x cualquier n√∫mero = 0
    A = 4'd0; B = 4'd9; #5;
    $display("%4d %4d | %4d | %b %b %b %b", A, B, P, N, Z, C, V);

    $finish;
  end

endmodule